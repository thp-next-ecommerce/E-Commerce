<div class="container">
  <h1>Ajouter un produit</h1>

  <%= form_for @item, url: administration_items_path(@item) do |f| %>
    <p><%= f.label 'Nom du produit' %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %><p>
    <p><%= f.label 'description produit' %>
    <%= f.text_field :description, class: "form-control" %><p>
    <p><%= f.label :image %>
    <%= f.file_field :image, class: "" %><p>
    <p><%= f.label 'Prix de base' %>
    <%= f.number_field :original_price, class: "form-control" %><p>
    <p><%= f.label 'Remise sur produit en %' %>
    <%= f.number_field :discounted_percentage, value: 0, class: "form-control" %><p>
    <p><%= f.label 'Status produit' %>
    <%= f.select(:active, options_for_select([['Valider', true], ['Désactiver', false]]), class: "form-control") %></p>
    <p><%= f.submit 'Créer', class: "btn btn-primary" %></p>
  <% end -%>
</div>
