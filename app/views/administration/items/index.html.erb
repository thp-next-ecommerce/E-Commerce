<main class="content">
  <div class="container-fluid p-0">
    <h1 class="h3 mb-3">Liste des produits</h1>
    <h2 class="h5 mb-3"><%= link_to 'Ajouter un produit', new_administration_item_path %></h2>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Item Id</th>
                  <th>Nom</th>
                  <th>Description</th>
                  <th>Prix de base</th>
                  <th>Remise en %</th>
                  <th>Prix actuel</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <%= render('item_list') %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
