<main class="content">
  <div class="container-fluid p-0">
    <h1 class="h3 mb-3">Détails commande <%= @order.id %></h1>
    <p>Date commande <%= @order.updated_at %></p>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Numéro produit</th>
                  <th>Nom produit</th>
                  <th>Prix de vente produit</th>
                  <th>Quantité</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% @order.order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.item_id %></td>
                  <td><%= order_item.item.name %></td>
                  <td><%= order_item.unit_price %></td>
                  <td><%= order_item.quantity %></td>
                  <td><%= order_item.total_price %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <p><span>Total commande: <%= @order.subtotal.to_f %></span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <p><%= link_to 'Retour', administration_orders_path, class: "btn btn-primary"%></p>
</main>

