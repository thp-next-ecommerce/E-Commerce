<div class="container jumbotron">
  <div class="row">
    <div class="col-lg-3 col-md-4 col-xs-12">
      <% if @item.image.attached? %>
        <%= image_tag(@item.image, class: "items__image") %> 
      <% elsif !@item.image_url.nil? %>
        <%= image_tag(@item.image_url, class: "items__image") %>     
      <% end %>
    </div>

    <div class="col-lg-9 col-md-8 col-xs-12">
      <h1><%= @item.name %></h1>
      <% if @item.discounted_percentage > 0 %>
	      <p>Prix de départ : <%= @item.original_price.to_f %>€</p>
	      <p>Pourcentage de remise : <%= @item.discounted_percentage %>%</p>
      <% end %>
      <p class="text-justify">Texte : <%= @item.description %></p>
      <p>Prix : <b><%= @item.price %>€</b></p>
    </div>
  </div>
  <br>

  <div class="" id="add_to_cart">
    <%= render  "layouts/add_to_cart", item: @item, order_item: @order_item %>  
  </div>
</div>
