<div class="container jumbotron">
  <h1>Bienvenue à Magic Project</h1>
  <br>
  
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prix de départ (€)</th>
        <th>Pourcentage de remise</th>
        <th>Prix (€)</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><a href="items/<%= item.id %>"><%= item.name %></a></td>
          <td><%= item.original_price.to_i %></td>
          <td><%= item.discounted_percentage %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
