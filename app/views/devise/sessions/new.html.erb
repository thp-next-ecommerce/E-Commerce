<h2>Se connecter</h2><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", class: "form-control" %>
  </div><br>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Mot de passe", class: "form-control" %>
  </div><br>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div><br>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter", class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
